{# empty Twig template #}
{% extends "layout.html.twig" %}
{% set reportMenu = true %}

{% block title %}Vos rapport de visite{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if report %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Practicien</th>
                    <th>Ville</th>
                    <th>Motif</th>
                </tr>
            </thead>
            {% for reports in report %}
                <tr>
                    <td>{{ reports.reportingDate }}</td>
                    <td>{{ reports.practitionerId }}</td>
                    <td>{{ reports.assessment }}</td>
                    <td>{{ reports.purpose }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun rapport trouv√©.</div>
{% endif %}   
{% endblock %}
